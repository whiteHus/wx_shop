.share-main{
  position: fixed;
  height: 100%;
  width: 100%;
  background-color:rgba(0,0,0,.3) ;
  z-index: 10;
}

.share-main-con{
  position: absolute;
  bottom: -100px;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  transition: 10s;
}
.share-fain{
   bottom: 0;
}
.share-main-btn{
  display: flex;
  flex-direction: row;
}
.share-main-area{
  width: 50%;
  display: flex;
  flex-direction: column;
  text-align: center;
  background-color: #fff;
}
.share-main-area::after {
  border: 0;
}
.btn_hover{
  background-color: #fff;
}
.share-main-area-img{
  width: 70rpx;
  height: 70rpx;
  margin: 25rpx auto 0rpx auto;
}
.share-main-area-til{
  font-size: 12px;
}

.share-main-cancel{
  text-align: center;
  border-top:1px solid #f1f1f1;
  font-size:14px;
  color:#333; 
  line-height: 45px;
}